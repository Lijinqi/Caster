<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke"
        android:weightSum="6">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_grade_select"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/sp_tab_item_selected"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dp"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_stage_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/white"
            android:orientation="vertical">
            <east.orientation.caster.view.RecyclerTabLayout
                android:id="@+id/tb_menu"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:theme="@style/RecyclerTabLayoutTheme.Basic"
                app:rtl_tabSelectedTextColor="@color/colorPrimaryDark"
                app:rtl_tabIndicatorHeight="2dp"
                app:rtl_tabIndicatorColor="@color/colorPrimaryDark"
                android:background="@drawable/sp_intent_res_tab"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_version_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intent_res_tab_height"
                android:layout_marginTop="5dp"
                android:background="@drawable/sp_intent_res_tab"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_book_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intent_res_tab_height"
                android:layout_marginTop="5dp"
                android:background="@drawable/sp_intent_res_tab"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_chapter_tab"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intent_res_tab_height"
                android:layout_marginTop="5dp"
                android:background="@drawable/sp_intent_res_tab"/>
            <!--<android.support.v7.widget.RecyclerView
                android:id="@+id/rv_knowLedge_tab"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="2dp"/>-->
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_page"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>

