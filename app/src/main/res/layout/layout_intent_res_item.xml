<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sp_page_item_bg"
    android:layout_marginBottom="5dp"
    android:padding="10dp">
    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/tv_item_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="msg"
        android:maxLines="3"
        android:layout_below="@+id/tv_item_title"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/tv_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tv_item_intro"/>
    <TextView
        android:id="@+id/tv_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="size"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tv_item_type"/>
    <Button
        android:id="@+id/btn_item_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下载"
        android:textColor="@color/white"
        android:background="@drawable/sl_login_btn_back"
        android:layout_alignTop="@id/tv_item_type"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>

